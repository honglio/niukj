extends ../layout

block content
  .container
    section.page-header
    section.row
      .col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
        .panel.panel-default
          .panel-heading
            h5.text-center.panel-title.bolder= title
          .panel-body
            form.form-horizontal(role='reset' method='POST' onsubmit="return validateForm(this);" novalidate)
              input(type='hidden' name='_csrf' value=_csrf)
              .form-group
                label.col-md-3.control-label(for='password') 新密码:
                .col-md-9
                  input#password.form-control(type='password' name='password' placeholder='6-14位英文字母或数字' data-toggle="popover" autofocus required)
              .form-group
                label.col-md-3.control-label(for='confirm') 确认新密码:
                .col-md-9
                  input#confirmPassword.form-control(type='password' name='confirm' placeholder='输入相同的密码' data-toggle="popover" required)
              .form-group
                .col-md-6.col-md-offset-3
                  button.btn.btn-warning.btn-reset.btn-addon(type='submit')
                    i.fa.fa-keyboard-o
                    |  修改密码
