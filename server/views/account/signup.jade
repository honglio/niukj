extends ../layout

block content
  .container
    section.page-header
    section.row
      .col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
        .panel.panel-default.noselect
          .panel-heading
            h5.text-center.panel-title.bolder= title
          .panel-body
            form.form-horizontal(role='signup' method='POST' onsubmit="return validateForm(this);" novalidate)
              input(type='hidden' name='_csrf' value=_csrf)
              .form-group
                label.col-md-3.control-label(for='email') 用户名
                .col-md-9
                  input.form-control#email(type='email' name='email' placeholder='Email' data-toggle="popover" autofocus required)
              .form-group
                label.col-md-3.control-label(for='password') 密码
                .col-md-9
                  input.form-control#password(type='password' name='password' placeholder='6-14位英文字母或数字' data-toggle="popover" required)
              .form-group
                label.col-md-3.control-label(for='confirmPassword') 确认密码
                .col-md-9
                  input.form-control#confirmPassword(type='password' name='confirmPassword' placeholder='输入相同的密码' data-toggle="popover" required)
              .form-group
                .col-md-6.col-md-offset-3
                  button.btn.btn-success.btn-addon(type='submit')
                    i.fa.fa-check
                    |  注册
                  a.btn.btn-link(href='/login') 已有账户?
    section.row
      .col-sm-10.col-md-8.col-sm-offset-1.col-md-offset-2
        .panel.panel-default
            .panel-heading
              h3.panel-title 使用其它帐号登录：
            .panel-body
              .col-md-3.col-sm-6.col-xs-12
                a.btn.btn-warning.btn-block.btn-weibo.btn-lg.btn-addon(href='/auth/weibo')
                  i.fa.fa-weibo
                  |  微博
              .col-md-3.col-sm-6.col-xs-12
                a.btn.btn-info.btn-block.btn-qq.btn-lg.btn-addon(href='/auth/qq')
                  i.fa.fa-qq
                  |  QQ
              .col-md-3.col-sm-6.col-xs-12
                a.btn.btn-dark.btn-block.btn-renren.btn-lg.btn-addon(href='/auth/renren')
                  i.fa.fa-renren
                  |  人人
              .col-md-3.col-sm-6.col-xs-12
                a.btn.btn-success.btn-block.btn-linkedin.btn-lg.btn-addon(href='/auth/linkedin')
                  i.fa.fa-linkedin
                  |  领英

