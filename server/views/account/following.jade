extends ../layout

block content
  .container
    section.page-header
      .row
        .col-md-9.col-sm-9.col-xs-9
          .profile-picture.pull-left.pull-none-xsm
            img.img-responsive.img-circle(src=account.profile.picture.url || account.gravatar() width='70')
          .profile-name(style="margin:0 100px;padding-top:25px;")
            strong
              if account
                a(href='/account/' + account.id)= account.profile.name || '未填'
            | &nbsp;
            code
              | 的#{title}
        .col-md-3.col-sm-3.col-xs-3
          form.search-form-full(method='get', role='form')
            .form-group
              input#search-following.form-control(type='text', name='s', placeholder='粉丝搜索...')
              i.fa.fa-search
    // Member Entries
    - each following in account.contacts.followings
      if following
        section.member-entry.clearfix
          .member-img
            img.img-responsive.img-circle(src=following.profile.picture.url || following.gravatar(), alt='', width='60')
          .member-details
            h4
              a(href='/account/' + following.id)= following.profile.name || '未填'
            .row.info-list
              .col-sm-3
                i.fa.fa-envelope
                | &nbsp; 电子邮件：
                p.text-muted.strong= following.profile.email || '未填'
              .col-sm-3
                i.fa.fa-map-marker
                | &nbsp; 地址：
                p.text-muted.strong= following.profile.location || '未填'
              .col-sm-3
                i.fa.fa-briefcase
                | &nbsp; 网站：
                p.text-muted.strong= following.profile.website || '未填'
              .col-sm-3
                i.fa.fa-male
                | /
                i.fa.fa-female
                | &nbsp; 性别：
                p.text-muted.strong= following.profile.gender || '未填'

