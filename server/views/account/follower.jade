extends ../layout

block content
  .container
    section.page-header
      .row
        .col-md-9.col-sm-9.col-xs-9
          a.profile-picture.pull-left.pull-none-xsm(href='#')
            img.img-responsive.img-circle(src='#{account.profile.picture || account.gravatar()}' width='70')
          .profile-name(style="margin:0 100px;padding-top:25px;")
            strong
              if account
                a(href='/account/' + account.id) #{account.profile.name || '未填'}
            &#160;&#160;&#160;
            code
              | 的#{title}
        .col-md-3.col-sm-3.col-xs-3
          form.search-form-full(method='GET', role='search')
            .form-group
              input#search-follower.form-control(type='text', name='s', placeholder='粉丝搜索...')
              i.fa.fa-search
    // Member Entries
    - each follower in account.contacts.followers
      if follower
        section.member-entry.clearfix
          .member-img(href='#')
              img.img-rounded(src='#{follower.profile.picture || follower.gravatar()}', alt='', width='60')
          .member-details
            h4
                a(href='/account/' + follower.id) #{follower.profile.name || '未填'}
            .row.info-list
              .col-sm-4
                i.fa.fa-envelope
                | &nbsp; 电子邮件：
                a.text-primary.strong(href='') #{follower.profile.email || '未填'}
              .col-sm-4
                i.fa.fa-map-marker
                | &nbsp; 地址：
                a.text-primary.strong(href='') #{follower.profile.location || '未填'}
              .col-sm-4
                i.fa.fa-briefcase
                | &nbsp; 网站：
                a.text-primary.strong(href='') #{follower.profile.website || '未填'}
              .clear
              .col-sm-4
                i.fa.fa-male
                | &nbsp; 性别：
                a.text-primary.strong(href='') #{follower.profile.gender || '未填'}
