extends layout

block content
  .container-fluid
    .page-header
      h3.centered= title

    form.form-horizontal(role='form', method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        label(class='col-sm-2 control-label' for='name') 用户名
        .col-sm-8
          input.form-control(type='text' name='name' id='name' autofocus=true placeholder='请输入您的用户名')
      .form-group
        label(class='col-sm-2 control-label' for='email') Email地址
        .col-sm-8
          input.form-control(type='text' name='email' id='email' placeholder='方便联系您的Email地址')
      .form-group
        label(class='col-sm-2 control-label', for='message') 问题内容
        .col-sm-8
          textarea.form-control(type='text', name='message', id='message', rows='7' placeholder='您的问题')
      .form-group
        .col-sm-offset-2.col-sm-8
          button.btn.btn-default(type='submit')
            i.fa.fa-mail-forward
            |  发送